# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

def framework_pods
  use_frameworks!
  pod 'Alamofire'
  pod 'PromiseKit', '~> 6.10'
  pod 'PromiseKit/Alamofire'
  pod 'ActiveLabel'
  pod 'TinyConstraints'
  pod 'SDWebImage'
  pod 'SwiftMessages'
  pod 'Firebase/Analytics'
  pod 'Firebase/Crashlytics'
end

target 'KaPetelka' do
  framework_pods
end

target 'KaPetelkaTests' do
  framework_pods
end

target 'KaPetelkaUITests' do
  framework_pods
end
